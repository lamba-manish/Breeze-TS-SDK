{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
    //   "lib": ["ES2018", "DOM"],
      "lib": ["es6", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }